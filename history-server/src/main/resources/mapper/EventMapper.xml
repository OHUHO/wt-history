<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.history.mapper.EventMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.history.entity.Event">
        <id column="event_id" property="eventId" />
        <result column="event_name" property="eventName" />
        <result column="dynasty_id" property="dynastyId" />
        <result column="is_alive" property="isAlive" />
        <result column="is_delete" property="isDelete" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        event_id, event_name, dynasty_id, is_alive, is_delete, create_time
    </sql>

</mapper>
